generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("USER")  // Ubah dari Role enum ke String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations - FIX: tambah relasi ke Borrowing
  borrowings Borrowing[]
  
  @@map("users")
}

model Book {
  id          Int        @id @default(autoincrement())
  title       String
  author      String
  isbn        String     @unique
  category    String
  description String?
  quantity    Int        @default(1)
  available   Int        @default(1)
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  borrowings Borrowing[]
  
  @@map("books")
  @@index([category])
  @@index([author])
}

model Member {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  email     String?  @unique
  phone     String?
  address   String?
  status    String   @default("ACTIVE")  // Ubah dari Status enum ke String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  borrowings Borrowing[]
  
  @@map("members")
  @@index([code])
  @@index([status])
}

model Borrowing {
  id         Int       @id @default(autoincrement())
  bookId     Int
  memberId   Int
  borrowedAt DateTime  @default(now())
  dueDate    DateTime
  returnedAt DateTime?
  status     String    @default("BORROWED")  // Ubah dari BorrowingStatus enum ke String
  
  // FIX: Tambah userId untuk relasi dengan User
  userId     Int?
  user       User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  
  // Relations
  book   Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)
  member Member @relation(fields: [memberId], references: [id], onDelete: Cascade)
  
  @@map("borrowings")
  @@index([bookId])
  @@index([memberId])
  @@index([status])
  @@index([dueDate])
  @@index([userId])
}
